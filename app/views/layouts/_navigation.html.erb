

<header class="navbar navbar-fixed-top navbar-default">
    <div class-="container">
      <%= link_to "Course Reviewer", root_path, class: "btn btn-lg btn-success", id: "logo" %>
      
    <ul class="nav-ul-item">
      <li class="dropdown">
					<%= link_to "#", class: "btn btn-default border-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
					Domains <b class="caret"></b>
					<% end %>
					<ul class="dropdown-menu">
						<% Domain.all.each do |domain| %>
							<li><%= link_to domain.name, domain_path(domain) %></li>
						<% end %>
						<% if logged_in? %>
							<li class='divider'></li>
								<li>
										<%=link_to(new_domain_path) do %>
											New Domain
										<% end %>
								</li>
						<% end %>
					</ul>
				</li>
    </ul>
    
    
    <ul class="nav-ul-item">
      <li class="dropdown">
					<%= link_to "#", class: "btn btn-default border-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
					Prerequisites <b class="caret"></b>
					<% end %>
					<ul class="dropdown-menu">
						<% Prereq.all.each do |prereq| %>
							<li><%= link_to prereq.name, prereq_path(prereq) %></li>
						<% end %>
						<% if logged_in? %>
							<li class='divider'></li>
								<li>
										<%=link_to(new_prereq_path) do %>
											New Prerequisites
										<% end %>
								</li>
						<% end %>
					</ul>
				</li>
    </ul>
    
    <% if logged_in? %>
			<div class="nav-item">
				<%= link_to "New Course", new_course_path, class: "btn btn-default border-blue" %>
			</div>
			<ul class="nav-item">
				<li class="dropdown">
					<%= link_to "#", class: "btn btn-default border-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
					<%= current_user.name %> <b class="caret"></b>
					<% end %>
					<ul class="dropdown-menu">
						<li><%= link_to "View Profile", user_path(current_user) %></li>
						<li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
						<li class="divider"></li>
						<li><%= link_to "Logout", logout_path %></li>
					</ul>
				</li>
			</ul>
			<% else %>
			<div class="nav-item">
				<%= link_to "Log In", login_path, class: "btn btn-default border-blue" %>
			</div>
			<% end %>
      
  </div>
</header>