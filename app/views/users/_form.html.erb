<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='well col-md-8 col-md-offset-2'>
    <%= form_for(@user, html: { multipart: true }) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :email %>
      <%= f.email_field :email, in: 1..5 %>
      
      <%= f.label :password %>
      <%= f.password_field :password, rows: 10 %>
      
      <%= f.submit(@user.new_record? ? 'Register' : 'Edit profile', class: 'btn btn-success') %>
      
    <% end %>
  </div>
</div>
